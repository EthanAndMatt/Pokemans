public class MarioPanel extends JPanel {

	final int WIDTH = 1200, HEIGHT = 674;// starting values for width and height in pixels

	
	private Random die = new Random();// I wanted randomness (specifically for colors)
	private Random pipeDist = new Random();
	private MarioWorld world;
	Image back;
	Image back2;
	int speed;
	Graphics g;
	public MarioPanel() {
		
		setPreferredSize(new Dimension(WIDTH, HEIGHT));// Otherwise, the frame starts off small
		
		world = new MarioWorld(this);
		world.setUpKeyBindings();
		makeImages();
		
	}
	


	private void makeImages() {
		URL url = getClass().getResource("Images/maybach.jpg");
		URL url2 = getClass().getResource("Images/maybach.jpg");

		try {
			this.back=(BufferedImage) ImageIO.read(url);
			this.back2=(BufferedImage) ImageIO.read(url2);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}



	@Override
	public void paintComponent(Graphics g) {
		super.paintComponent(g);
		//drawBackground(g);
		System.out.println("repainting");
		world.draw(g);
		
	}

	

	
}
