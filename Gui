	protected void buttonClicked(String text) {
		y++;
		if(y<6){
			this.chosenPokeman+= text+", ";
		}
		else if (y==6){
			this.chosenPokeman+=text+".";
		}
		else if (y>6){
			y--;
		}
		Pokemon.setText("Chosen Pokemon: " + y+" - "+this.chosenPokeman);
	}

	public static void main (String args[]){
		JFrame frame = new JFrame("Choose your Pokeman");
		Gui gui = new Gui();
		frame.add(gui);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(600,300);
		frame.setVisible(true);
		frame.setTitle("Welcome Pokemon Trainer!");
	}
}
